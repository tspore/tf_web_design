/*Global styles*/
body {
	font-size: 12px;
	background: #dcc8a2 url('web_images/background_top.jpg') no-repeat top center;
}

a {
	color: #8b2a38;
}
#wrapper {
  position: relative;
}
#header_spacer {
width: 960px;
height: 80px;
}
#user_nav {
  position: absolute;
  right: 165px;
  font-size: 1.3em;
}
#user_nav a { 
  color: white;
  text-decoration: none;
}
#header_spacer {
  text-indent: -9999px;
}
.phone {
  width: 200px;
  padding-top: 10px;
  padding-left: 790px;
  color: #ffffff;
  font-size: 1.3em;
}

.phone a {
    color: #8a7741;
}
.facebook {
  padding-left: 5px;
  width: 24px;
  height: 22px;
}
.facebook a {
    text-indent: -9999px;
}
.facebook img {
position: relative;
top: 6px;
left: -5px;
}

#nav {
  background: #8b2a38;
  border: 1px solid black;
  border-top-right-radius: 8px;
  border-top-left-radius: 8px;
  width: 920px;
  margin-left: 20px;
}
#nav a {
  color: #ffffff;
}
#slides {
margin-left: 20px;
width: 920px;
height: 390px;
background: #000000 url('/web_images/marble.jpg');
border: 1px solid black;
border-bottom-right-radius: 8px;
border-bottom-left-radius: 8px;
}
#slides .next {
  left: 920px;
}
.slides_container {
  width: 920px;
  height: 390px;
}
/*Home page Styles*/
.homepage h1, .homepage h3 {
	color: #8b2a38;
	font-size: 1.8em;
	font-family: Georgia, sans-serif;
}

.homepage #content-wrap {
  width: 960px;
}
#blog_roll {
  position: absolute;
  top: 800px;
  width: 460px;
}
#recent {
  margin: 10px;
  overflow: hidden;
  width: 200px;
  float: left;
  margin-left: 480px!important;
  border:none;
}
#updates {
  margin: 10px;
  overflow: hidden;
  width: 200px;
  float: left;
      border:none;
}